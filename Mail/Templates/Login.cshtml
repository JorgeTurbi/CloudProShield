@model dynamic
@{
    ViewBag.Title = "New sign-in detected";
    Layout = "Layout";
}

<h2>New sign-in detected</h2>
<p>Hello,</p>
<p>We're informing you that a new sign-in has been registered for your @Model.AppName account.</p>

<div class="details">
    <h3>Sign-in details:</h3>
    <ul>
        <li><strong>Date and time:</strong> <span>@Model.Date</span></li>
        <li><strong>IP/Location:</strong> <span>@Model.IpInfo</span></li>
        <li><strong>Device:</strong> <span>@Model.Device</span></li>
    </ul>
</div>

<div class="alert alert-warning">
    <p><strong>Don't recognize this activity?</strong> We recommend changing your password immediately and contacting our support team.</p>
</div>

<div class="signature">
    <p>Best regards,<br>The @Model.AppName Team</p>
</div>