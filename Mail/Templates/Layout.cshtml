@model dynamic
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        @(Model.InlineCss)
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <img src="cid:logoCid" alt="@Model.AppName" class="logo"
                onerror="this.onerror=null; this.src=''; this.alt='Logo';">
        </div>

        <div class="content">
            @RenderBody()
        </div>

        <div class="footer">
            <p>&copy; @Model.Year @Model.AppName. All rights reserved.</p>
            <p>This is an automated email, please do not reply.</p>
        </div>
    </div>
</body>

</html>