@model dynamic
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        @(Model.InlineCss)
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <img src="cid:logoCid" alt="@Model.AppName" class="logo"
                onerror="this.onerror=null; this.src=''; this.alt='Logo';">
            <h1>@Model.AppName</h1>
        </div>

        <div class="content">
            @RenderBody()
        </div>

        <div class="footer">
            <p>&copy; @Model.Year @Model.AppName. Todos los derechos reservados.</p>
            <p>Este es un correo autom√°tico, por favor no responder.</p>
        </div>
    </div>
</body>

</html>